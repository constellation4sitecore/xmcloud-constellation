{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
      "target": "es5",
      "module": "commonjs",
      "jsx": "react",
      "skipLibCheck": true,
      "outDir": "dist/cjs",
      "typeRoots": ["node_modules/@types"],
      "declarationDir": "./types",
      "allowJs": true
    },
    "exclude": [
      "node_modules",
      "types",
      "typings",
      "dist",
      "middleware.d.ts",
      "editing.d.ts",
      "monitoring.d.ts",
      "site.d.ts",
      "utils.d.ts",
      "src/tests/*",
      "src/test-data/*",
      "**/*.test.ts",
      "**/*.test.tsx"
    ]
  }